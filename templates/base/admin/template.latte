{extends file('body.latte')}

{block main}
    <main class="grow p-4 w-full max-w-5xl mx-auto">
        <form action="{path('BASE_PATH') . 'admin/template/post'}" method="POST" enctype="multipart/form-data">
            {csrf()}

            <div class="space-y-4">
                <h1 class="leading-none text-6xl font-bold">{text('template.templates')}</h1>

                <div class="overflow-x-auto rounded-box border border-base-content/5">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>{text('template.name')}</th>
                            <th>{text('template.select')}</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td>
                                <input type="hidden" name="template[1][id]" value="1">
                                Base
                            </td>
                            <td>
                                <label>
                                    <select class="select select-bordered w-full" name="template[1][value]">
                                        {foreach array_diff(scandir(path('TEMPLATES_PATH')), array('.', '..', '.DS_Store')) as $val}
                                            {php $theme = json_decode(file_get_contents(path('TEMPLATES_PATH') . $val . '/info.json'))}
                                            <option value="{$theme->url}" {$templateBase != $theme->url ?: 'selected'}>
                                                {$theme->name . ' (' . $theme->description . ')'}
                                            </option>
                                        {/foreach}
                                    </select>
                                </label>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <input type="hidden" name="template[2][id]" value="2">
                                Sub
                            </td>
                            <td>
                                <label>
                                    <select class="select select-bordered w-full" name="template[2][value]">
                                        {foreach array_diff(scandir(path('TEMPLATES_PATH')), array('.', '..', '.DS_Store')) as $val}
                                            {php $theme = json_decode(file_get_contents(path('TEMPLATES_PATH') . $val . '/info.json'))}
                                            <option value="{$theme->url}" {$templateSub != $theme->url ?: 'selected'}>
                                                {$theme->name . ' (' . $theme->description . ')'}
                                            </option>
                                        {/foreach}
                                    </select>
                                </label>
                            </td>
                        </tr>
                        </tbody>
                    </table>

                </div>

                <div class="text-center">
                    {button type:submit, text:text('button.update')}
                </div>

            </div>
        </form>
    </main>
{/block}
{extends '../body.latte'}

{block main}
    <main class="grow p-4 w-full max-w-5xl mx-auto">
        <form action="{= _p('BASE_PATH') . 'admin/setting/post'}" method="POST" enctype="multipart/form-data">
            <div class="space-y-4">
                    <h1 class="leading-none text-6xl font-bold">Settings</h1>

                    <div n:ifset="$settings" class="overflow-x-auto">
                        <table class="table">
                            <thead>
                            <tr>
                                <th></th>
                                <th>name</th>
                                <th>value</th>
                                <th>info</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {foreach $settings as $key => $setting}
                                {if $setting->getName()}
                                    <tr>
                                        <td>
                                            {\Ivy\Button::switch("setting[$key][bool]", $setting->getBool())}
                                        </td>
                                        <td class="font-bold">
                                            {$setting->getName()}
                                        </td>
                                        <td>
                                            <label>
                                                <input type="text" name="setting[{$key}][value]"
                                                       value="{$setting->value ?? ''}" class="input input-bordered w-full">
                                            </label>
                                        </td>
                                        {if empty($setting->getInfo()) && !empty($setting->getName())}
                                            <td>
                                                <label>
                                                    <input type="text" name="setting[{$key}][info]"
                                                           value="{$setting->info ?? ''}" class="input input-bordered w-full">
                                                </label>
                                            </td>
                                        {else}
                                            <td>{$setting->getInfo()}</td>
                                        {/if}
                                        <td class="text-right">
                                            <input type="hidden" name="setting[{$key}][id]"
                                                   value="{$setting->getId()}">
                                            <div class="join">
                                                {\Ivy\Button::delete("setting[$key][delete]", "setting_" .
                                                $setting->getId())}
                                            </div>
                                        </td>
                                    </tr>
                                {/if}
                            {/foreach}
                            <tr>
                                <td colspan="6">
                                    <label>
                                        <input class="input input-bordered w-full" type="text" name="setting[][name]"
                                               placeholder="Add setting name">
                                    </label>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="text-center">
                        {\Ivy\Button::submit('update')}
                    </div>

            </div>
        </form>
    </main>
{/block}
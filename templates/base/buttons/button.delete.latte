<label class="btn btn-soft btn-primary btn-square shadow-none join-item"
       title="{text('button.delete') . ' ' . ($placeholder ?? $id)}"
       for="modal_{$name}_{$id}"
       {if isset($disabled) && $disabled}disabled="disabled"{/if}>
    {icon("feather/trash-2.svg")|noescape}
</label>

<input type="checkbox" id="modal_{$name}_{$id}" class="modal-toggle block" name="{$name}" value="{$value}"/>
<div n:if="$id" class="modal text-left" role="dialog">
    <div class="modal-box">
        <label class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2" for="modal_{$name}_{$id}">âœ•</label>
        <h3 class="text-lg font-bold">{text('modal.delete')}</h3>
        <p class="py-4">{text('modal.delete_question', ['placeholder' => $placeholder ?? $id])}</p>
        <div class="modal-action">
            <label for="modal_{$name}_{$id}" class="btn">{text('button.cancel')}</label>
            <button class="btn btn-primary shadow-none"
                    name="submit" type="submit" value="delete">{text('button.delete')}
            </button>
        </div>
    </div>
</div>